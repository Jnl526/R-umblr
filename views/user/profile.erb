<div class="main bd-content" id="content" role="main">
    <div class="container">
        <h1>Welcome, <%=@user.first_name%> <%=@user.last_name%></h1>
   
        <section>
            <form id="usrform" class="form-inline my-2 my-lg-0"  method="POST" action="/profile/<%= @user.id %>">
                <input class="form-control mr-sm-2" type="hidden" name="_method" value="PUT">
                <input class="form-control mr-sm-2"  type="text" name="first_name" value="<%= @user.first_name %>">
                <input class="form-control mr-sm-2"  type="text" name="last_name" value="<%= @user.last_name %>">
                <input class="form-control mr-sm-2" type="date" name="birthday" value="<%= @user.birthday %>">
                <input class="form-control mr-sm-2" type="email" name="email" value="<%= @user.email %>">
                <input class="form-control mr-sm-2" type="password" name="password" value="<%= @user.password %>">
                <input class="form-control mr-sm-2" type="text" name="img_url" value="<%= @user.img_url %>">
                <textarea class="form-control mr-sm-2" rows="3" name="info" value="<%= @user.info %>"><%= @user.info %></textarea>
                <textarea class="form-control mr-sm-2" rows="3" name="statement" value="<%= @user.statement %>">
            <%= @user.statement %></textarea>
            <button class="btn my-2 my-sm-0" type="submit">Edit</button>
            </form>
            
        
        <form action="/user/<%= @user.id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete?')">
            <input type="hidden" name="_method" value="DELETE">
            <button class="btn my-2 my-sm-0" type="submit">Delete</button>
        </form>
        </section>
    </div> <!--  	container	 -->
</div <!--  	main	 -->