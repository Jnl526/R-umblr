<div class="main-panel edit-profile">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-transparent  navbar-absolute">
                <div class="container-fluid">
                    <div class="navbar-wrapper">
                     <p class="navbar-brand text-tan">Profile: <a href="/profile/<%= @user.id %>">View</a></p>
                    </div>
                        <ul class="navbar-nav">
                            <li class="nav-item">
                            <p class="log text-tan">Hey, <%= @user.first_name %></p>
                            </li>
                            <li class="nav-item">
                                    
                                        <a class="nav-link log" href="/logout" onclick="return confirm('Are you sure?')"><i class="fas fa-sign-out-alt left" style="
                                        line-height: unset;
                                    "></i><span>Logout</span></a>
                                                                    
                            </li>
                        </ul>
                    </div>
                </nav>
                <!-- Content -->
    <div class="content">
        <div class="container-fluid">
            <div class="row ">
                <div class="col-md-7">
                    <div class="card">
                        <div class="card-header card-header-primary">
                            <h4 class="card-title">Edit Profile</h4>
                            <p class="card-category">Complete your profile</p>
                        </div>
                    <div class="card-body">
                        <form  method="POST" action="/profile/<%= @user.id %>">
                            <input type="hidden" name="_method" value="PUT">
                            <div class="row m-0">
                                <div class="col-sm-5">
                                    <div class="">
                                        <p>First Name</p>
                                        <p><input class="form-control mr-sm-2"  type="text" name="first_name" value="<%= @user.first_name %>"></p>
                                    </div>
                                </div>
                                <div class="col-sm-5">
                                    <div class="form-group bmd-form-group">
                                        <p>Last Name</p>
                                        <input class="form-control"  type="text" name="last_name" value="<%= @user.last_name %>">
                                    </div>
                                </div>
                            </div>
                            <div class="row m-0">
                                <div class="col-md-5">
                                    <div class="form-group ">
                                        <p >Birthday</p>
                                        <input class="form-control " type="date" name="birthday" value="<%= @user.birthday %>">
                                    </div>
                                </div>
                                <div class="col-md-5">
                                <div class="form-group">
                                <p>Profile Image</p>
                                <input class="form-control " type="text" name="img_url" value="<%= @user.img_url %>" placeholder="Enter image url">
                            </div>
                                </div>
                            </div>
                            <div class="row m-0">
                                <div class="col-md-5">
                                    <div class="form-group ">
                                        <p>Email</p>
                                        <input class="form-control" type="email" name="email" value="<%= @user.email %>">
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <div class="form-group bmd-form-group">
                                        <p>Password</p>
                                        <input class="form-control " type="password" name="password" value="<%= @user.password %>">
                                    </div>
                                </div>
                            </div>
                            <div class="row m-0">
                                <div class="col-md-11">
                                    <div class="form-group">
                                        <label>About Me</label>
                                        <div class="form-group ">
                                            
                                            <textarea class="form-control " rows="2" name="info" value="<%= @user.info %>"><%= @user.info %></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row m-0">
                                <div class="col-md-11">
                                    <div class="form-group">
                                        <label>Statement/Quote</label>
                                        <div class="form-group bmd-form-group">
                                        <textarea class="form-control " rows="2" name="statement" value="<%= @user.statement %>">
                                        <%= @user.statement %></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary pull-right">Update Profile</button>
                            <div class="clearfix"></div>
                        </form>
                    </div>
            </div>

        <form class="right" action="/profile/<%= @user.id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete?')">
        <input type="hidden" name="_method" value="DELETE">
        <button class="btn my-2 my-sm-0" type="submit">Delete</button>
        </form>
                </div><!-- col-md-7 -->
                <div class="col-md-4">
                            <div class="card card-profile">
                                <div class="card-avatar mx-auto">
                                        <img class="img img-thumbnail" src="<%= @user.img_url %>">
                                </div>
                                <div class="card-body">
                                    <h4 class="card-title text-center text-tan"><%= @user.first_name %>&nbsp;<%= @user.last_name %></h4>
                                    <p class="quote text-center">
                                    <%= @user.statement %>
                                    </p>
                                    <p class="card-description">
                                    <%= @user.info %>
                                    </p>
                                    
                                </div>
                            </div>
                        </div>
                <!-- col-md-4 -->
            </div><!-- row -->
        </div> <!-- container-fluid -->
    </div> <!-- content -->
</div>  <!-- main -->