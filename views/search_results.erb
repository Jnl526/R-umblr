<div class="breadcrumbs pt-4">
    <div class="container">
            <nav class="navbar">
                <ul class="breadcrumbs navbar-nav ">
                    <li class="nav-item">
                        <a class="p-2 text-tan" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <sub><i class="fas fa-ellipsis-h text-tan "></i></sub>
                    </li>
                    <li class="nav-item">
                        <a class="p-2 text-tan" href="#">Search Results</a>
                    </li>
                </ul>
            </nav>
    </div>
</div>

<div class="main bd-content tags" id="content" role="main">
    <div class="container">
    <section class="recent">
    <div class="container">	
        <div class="row">
            <div class="col-md-8">
                <h2 class="title">Latest Posts </h2>
                    <br>
                <% if @posts != nil%>
                    <div class="row justify-content-center">
                        <% @posts.each do |post| %>
                            <div class="col-6">
                                <div class="card card-plain card-blog">
                                    <div class="card-image ">
                                        <a href="/post/<%= post.id %>">
                                            <img class="img img-raised rounded size" src="<%= post.featured_img %>">
                                        </a>
                                    </div><!-- card-image -->
                                    <div class="card-body">
                                    <h4 class="card-title"><a href="/post/<%= post.id %>"><%= post.title %> </a></h4>
                            <p class="entry-meta">
                            <span class="author"><a href="/profile/<%= post.user_id %>"><%=User.find(post.user_id).first_name%> &nbsp;<%=User.find(post.user_id).last_name%></a></span>
                        <span class="date"><%= post.created_at.strftime('%B %d, %Y') %></span>
                        </p>
                        <p class="entry-meta">
                        <span class="tags"><i class="fas fa-tags pr-2"></i>
                            <% post.tags.each_with_index do |tag, index|%>
                                <span class="tags"> <a href="/tag/<%= tag.id %>"><%=tag.name%><%= "," unless post.tags.size==index+1 %></a> 
                            <%end%> 
                        </span>
                        </p>
                        <p><a href="/post/<%= post.id %>">
                        Read More
                    </a></p>
                                    <% if user_exists? %>
                        <p class="card-text"><a href="/post/<%= post.id %>/edit">edit/delete post</a></p>
                        <% end %>
                                    </div><!-- card-body -->
                                </div> <!-- card -->
                            </div>
                        <% end %>
                    </div>
              
                <% else %>                                        
                <h1 class="text-white">No Posts Found</h1>
                <%end%>
            </div>   <!-- col-md-8 -->

            <div class="col-md-4">
              <div class="site-sidebar">
                <section class="widget widget_search">
                  <form class="search-form" action="/search", method="get">
                    <div class="form-group">
                      <label for="search" class="sr-only">Search</label>
                      <input type="hidden" name="search_by" id="search_by" value="tag">
                      <input id="search" type="search" name="query" class="form-control search-field" placeholder="Search by tags...">
                    </div><!-- .form-group -->
                    <button type="submit" class="btn btn-default search-submit"><i class="fa fa-search"></i></button>
                  </form><!-- .search-form -->
                </section><!-- .widget_search -->

                <section class="widget widget_about">
                  <h3 class="widget-title text-center"><span>About</span></h3>
                  <div class="tagcloud">
                  <p class="text-white text-center">It's About Nothing is a blog concept that allows multiple users to post anything really...about nothing. 
                  </p>
                        
                  </div>
                </section>
              </div><!-- .site-sidebar -->
            </div>
     </div>
</section>
    </div>
</div>